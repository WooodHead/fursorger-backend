{
    "name": "fursorger-be",
    "version": "0.0.1",
    "description": "",
    "author": "Mirco Kraenz",
    "license": "UNLICENSED",
    "scripts": {
        "clean": "rimraf dist build .serverless",
        "build": "npm run clean && tsc -p tsconfig.build.json",
        "deploy:prod": "npm run clean && NODE_ENV=prod serverless deploy",
        "deploy:test": "npm run clean && NODE_ENV=prod serverless offline",
        "dev": "npm run start:dev",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "docker-compose up -d && tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
        "start:prod": "node dist/main.js",
        "restart": "docker-compose down && docker-compose up -d && npm run dev",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "sanity-check": "npm install && npm test && npm run dev",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^6.10.12",
        "@nestjs/core": "^6.10.12",
        "@nestjs/platform-express": "^6.10.12",
        "@nestjs/typeorm": "^6.2.0",
        "@nestjsx/crud": "^4.2.0",
        "@nestjsx/crud-typeorm": "^4.2.0",
        "@types/aws-lambda": "^8.10.39",
        "@types/aws-serverless-express": "^3.3.2",
        "@types/bunyan": "^1.8.6",
        "aws-lambda": "^0.1.2",
        "aws-serverless-express": "^3.3.6",
        "bunyan": "^1.8.12",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "express": "^4.17.1",
        "express-requests-logger": "^2.0.6",
        "lodash": "^4.17.15",
        "pg": "^7.14.0",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3",
        "typeorm": "^0.2.21",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.0.0",
        "@types/express": "^4.16.1",
        "@types/jest": "24.0.11",
        "@types/lodash": "^4.14.149",
        "@types/node": "11.13.4",
        "@types/supertest": "2.0.7",
        "@types/uuid": "^3.4.6",
        "jest": "24.7.1",
        "prettier": "1.17.0",
        "prettier-tslint": "^0.4.2",
        "serverless-dotenv-plugin": "^2.1.1",
        "serverless-offline": "^6.0.0-alpha.41",
        "serverless-plugin-optimize": "^4.1.1-rc.1",
        "serverless-plugin-typescript": "^1.1.9",
        "supertest": "4.0.2",
        "ts-jest": "24.0.2",
        "ts-node": "8.1.0",
        "tsc-watch": "2.2.1",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-lines-between-class-members": "^1.3.6",
        "tslint-no-focused-test": "^0.5.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "3.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
